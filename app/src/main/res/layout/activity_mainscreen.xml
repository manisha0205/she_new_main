<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/left"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"
            ></TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/lockkk"></ImageView>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="14sp"
        android:padding="20dp"
        android:background="@drawable/searchstyless"
        android:hint="Search Here"
        android:drawablePadding="20dp"
        android:textColor="#B7000000"
        android:drawableLeft="@drawable/baseline_search_24"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="15dp"
        android:text="Safety\nOne Tap Away !!"
        android:textColor="#DD000000"
        android:textSize="25sp"
        android:textStyle="normal"></TextView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gredcard2"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Danger"
                            android:textSize="25sp"
                            android:textColor="#FFF"
                            android:textStyle="normal"
                            android:fontFamily="@font/aclonica"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send Location To Family "
                            android:textSize="16dp"
                            android:textColor="#DDE4DFDF"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/buttonstyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Send Now"
                                android:textSize="18sp"
                                android:textColor="#99000000"
                                android:gravity="center"
                                android:padding="10dp"
                                android:fontFamily="sans-serif-medium"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="-45dp"
                        android:src="@drawable/danger"
                        android:layout_weight="1"
                        >
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"

                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn3"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map"
                            android:layout_marginLeft="50dp"
                            android:textSize="25sp"
                            android:textColor="#FFF"
                            android:textStyle="normal"
                            android:fontFamily="@font/aclonica"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Search Nearby Places !!"
                            android:textSize="16sp"
                            android:textColor="#DDE4DFDF"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/buttonstyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Search Now"
                                android:textSize="18sp"
                                android:textColor="#99000000"
                                android:gravity="center"
                                android:padding="10dp"
                                android:fontFamily="sans-serif-medium"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="-50dp"
                        android:src="@drawable/map"
                        android:layout_weight="1"
                        >
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn4"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  How To Use"
                            android:textSize="25sp"
                            android:textColor="#FAF5F5"
                            android:textStyle="normal"
                            android:fontFamily="@font/aclonica"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn How To Use This !! "
                            android:textSize="16sp"
                            android:textColor="#DDFBF6F6"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/buttonstyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="See Now"
                                android:textSize="18sp"
                                android:textColor="#99000000"
                                android:gravity="center"
                                android:padding="10dp"
                                android:fontFamily="sans-serif-medium"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="-50dp"
                        android:src="@drawable/help"
                        android:layout_weight="1">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginVertical="10dp"
        android:textSize="25sp"
        android:textColor="#DD000000"
        android:textStyle="normal"
        android:fontFamily="@font/aclonica"
        ></TextView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="4dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="85dp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/safe"
                            android:layout_weight="1"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safe"
                            android:textSize="14sp"
                            android:paddingTop="10dp"
                            android:padding="10dp"
                            android:textColor="#FFF"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="19dp"
                        android:layout_marginHorizontal="4dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/helpline"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Helpline"
                            android:textSize="14sp"
                            android:paddingTop="10dp"
                            android:textColor="#FFF"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginHorizontal="4dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="85dp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/chat"
                            android:layout_weight="1"></ImageView>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:padding="10dp"
                            android:paddingTop="10dp"
                            android:text="Chatting"
                            android:textColor="#FFF"
                            android:textSize="14sp"
                            android:textStyle="normal"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="15dp"
                        android:layout_marginHorizontal="4dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="85dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/compliant"
                            android:layout_weight="1"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laws"
                            android:textSize="14dp"
                            android:paddingTop="10dp"
                            android:textColor="#FFF"
                            android:padding="10dp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="4dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:id="@+id/gameimage"
                            android:src="@drawable/contacts"
                            android:layout_weight="1"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contacts"
                            android:textSize="14sp"
                            android:textColor="#FFF"
                            android:paddingTop="10dp"
                            android:padding="10dp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginHorizontal="4dp">
                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/defense"
                            android:layout_weight="1"></ImageView>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Defence"
                            android:textSize="14sp"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textStyle="normal"
                            android:padding="10dp"
                            android:paddingTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>
